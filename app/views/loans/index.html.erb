<h1>Listing loans</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Tenure</th>
    <th>Interest rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= loan.type %></td>
    <td><%= loan.tenure %></td>
    <td><%= loan.interest_rate %></td>
    <td><%= link_to 'Show', loan %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

